{
  "$schema": "./manifest.schema.json",
  "name": "ちょっとだけ使いやすくなる拡張機能セット",
  "extensions": [
    {
      "id": "dark-mode",
      "name": "サイトをダークモード化するやつ",
      "version": "1.2.0",
      "author": "あるふぁべっと",
      "description": "BOOTHのサイトをダークモードにします。",
      "published_at": "2025-11-02",
      "updated_at": "2025-11-02",
      "contents": [
        {
          "matches": [
            "//booth.pm/*/items/*",
            "//*.booth.pm/items/*"
          ],
          "files": [
            "dist/dark-mode/style.css"
          ]
        }
      ]
    },
    {
      "id": "item-preview",
      "name": "リンクホバーすると商品プレビュー出るやつ",
      "version": "1.1.0",
      "author": "あるふぁべっと",
      "description": "リンクをホバーすると商品の詳細が見られます。",
      "published_at": "2025-11-02",
      "updated_at": "2025-11-02",
      "contents": [
        {
          "matches": [
            "//booth.pm/*/items/*",
            "//*.booth.pm/items/*"
          ],
          "files": [
            "dist/item-preview/style.css",
            "dist/item-preview/preview.js"
          ]
        }
      ]
    },
    {
      "id": "hide-credit",
      "name": "決済画面のカード情報を非表示にするやつ",
      "version": "5.0.1",
      "author": "あるふぁべっと",
      "description": "決済画面に出てくる名義人とカード番号を非表示にします。",
      "published_at": "2025-11-02",
      "updated_at": "2025-11-02",
      "contents": [
        {
          "matches": [
            "//checkout.booth.pm/checkout/step1"
          ],
          "files": [
            "dist/hide-credit/style.css"
          ]
        }
      ]
    },
    {
      "id": "hide-nsfw",
      "name": "R-18商品をその場で非表示にするやつ",
      "version": "1.0.0",
      "author": "あるふぁべっと",
      "description": "R-18商品を非表示にするボタンを全てのページ上に設置します。",
      "published_at": "2025-12-01",
      "updated_at": "2025-12-01",
      "contents": [
        {
          "matches": [
            "<all_pages>"
          ],
          "files": [
            "dist/hide-nsfw/style.css"
          ]
        }
      ]
    }
  ]
}
